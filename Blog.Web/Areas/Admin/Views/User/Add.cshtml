@model UserAddDTO
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kategory Yönetimi /</span> Kullanıcı ekle </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Default</h5>
                <form asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" style="color:red"></div>
                    <div class="card-body">


                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">Adı</label>
                            <Input asp-for="FirstName" type="text" class="form-control mb-2" id="defaultFormControlInput" placeholder="Lütfen kullanıcı adı giriniz" aria-describedby="defaultFormControlHelp" min-height="280px">
                            <span asp-validation-for="FirstName" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">Soyadı</label>
                            <Input asp-for="LastName" type="text" class="form-control mb-2" id="defaultFormControlInput" placeholder="Lütfen kullanıcı soyadı giriniz" aria-describedby="defaultFormControlHelp" min-height="280px">
                            <span asp-validation-for="LastName" class="text-danger"></span>

                        </div>
                         <div class="form-group">
                            <label asp-for="Email" class="form-label">Mail</label>
                            <Input asp-for="Email" type="email" class="form-control mb-2" id="defaultFormControlInput" placeholder="Lütfen kullanıcı email giriniz" aria-describedby="defaultFormControlHelp" min-height="280px">
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                            <Input asp-for="PhoneNumber" type="tel" class="form-control mb-2" id="defaultFormControlInput" placeholder="Lütfen kullanıcı telefonu giriniz" aria-describedby="defaultFormControlHelp" min-height="280px">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                        </div>
                         <div class="form-group">
                            <label asp-for="RoleId" class="form-label">Kullanıcın Rolu</label>
                            <select asp-for="RoleId" class="form-control mb-2" asp-items="@(new SelectList(Model.Roles, "Id", "Name"))"></select>
                            <span asp-validation-for="RoleId" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <Input asp-for="Password" type="password" class="form-control mb-2" id="defaultFormControlInput" placeholder="Lütfen kullanıcı şifresini giriniz" aria-describedby="defaultFormControlHelp" min-height="280px">
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                       




                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


        <!-- Form controls -->

    </div>
</div>