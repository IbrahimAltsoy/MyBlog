
@model List<CategoryDTO>



<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kategori Yönetimi /</span> Kategoriler</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">


        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-primary mb-2" width="250px" asp-area="Admin" asp-controller="Category" asp-action="Add">
                <i class='bx bxs-comment-add'></i>Kategori Ekle
            </a>
            <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Tarih</th>                       
                        <th>Yazar</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>

                @*<tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>Tarih</th>                       
                        <th>Yazar</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>*@
                <tbody class="table-border-bottom-0">
                    @foreach (var category in Model)
                    {
                        <tr name="@category.Id">
                            <th>@category.Name</th>
                            <th>@category.CreatedDate</th>

                            <th>@category.CreatedBy</th>
                           @* <th>@category.CreatedBy</th>*@

                            <th>@(category.IsDeleted ? "Pasif" : "Aktif")</th>
                            <th>
                                <a class="btn btn-warning btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-categoryId="@category.Id"><i class="bx bx-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id" onclick="return confirm('Silmek istediğinden emin misin?')"><i class="bx bx-minus-circle"></i></a>
                            </th>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

    <hr class="my-5">

</div>
@*
// Buraya Eklendi *@
<script>
    function clicked(e) {
        if (!confirm('Silmek istediğinden emin misin?')) {
            e.preventDefault();
        }
    }
</script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/web/alertify.min.js" />
<script src="~/js/site.js" asp-append-version="true"></script>
