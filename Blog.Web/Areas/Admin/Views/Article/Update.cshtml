@model ArticleUpdateDTO

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Makale Yönetimi /</span> Makale ekle </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Default</h5>
                <form asp-controller="Article" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id"/>
                        <div class="form-group">
                            <label asp-for="CategoryId">Kategori</label>
                            <select id="categoryList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.categories, "Id", "Name"))"> </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Title" class="form-label">Başlık</label>
                            <input asp-for="Title" type="text" class="form-control mb-2" id="defaultFormControlInput" placeholder="Lütfen Başlık giriniz" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Title" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Content" class="form-label">İçerik</label>
                            <textarea asp-for="Content" type="text" class="form-control mb-2" id="defaultFormControlInput" placeholder="Lütfen içerik giriniz" aria-describedby="defaultFormControlHelp" min-height="280px"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>

                        </div>
                        <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Image.FillName" class="form-label d-block">Resim yükleyiniz<</label>
                            <img src="~/images/@Model.Image.FillName" alt="@Model.Title" />
                            @*<input asp-for="Image.FillName" type="file" accept="image/*" class="form-control mb-2" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Image.FillName" class="text-danger"></span>*@

                        </div>
                            <div class="form-group col-md-6">
                            
                            <input asp-for="Photo" type="file" accept="image/*" class="form-control mb-2" id="defaultFormControlInput"  aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Photo" class="text-danger"></span>

                        </div>
                        </div>


                        <div class="form-group">
                            <button class="btn btn-primary mt-3" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


        <!-- Form controls -->

    </div>
</div>
