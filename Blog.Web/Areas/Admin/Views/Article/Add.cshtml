
@model ArticleAddDTO
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Makale Yönetimi /</span> Makale ekle </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Default</h5>
                <form asp-controller="Article" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="form-group">
                            <select id="categoryList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.categories, "Id", "Name"))"> </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">Başlık</label>
                            <input type="text" class="form-control mb-2" id="defaultFormControlInput" placeholder="John Doe" aria-describedby="defaultFormControlHelp">

                        </div>
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">İçerik</label>
                            <input type="text" class="form-control mb-2" id="defaultFormControlInput" placeholder="John Doe" aria-describedby="defaultFormControlHelp">

                        </div>
                       
                        
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


        <!-- Form controls -->

    </div>
</div>